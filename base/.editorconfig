# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf

[*.go]
indent_style = tab
indent_size = 8

[*.{json,template,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4

[*.groovy]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
