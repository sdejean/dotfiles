{
	"default_module": "powerline.segments.common",
	"segment_data": {
        "hostname": {
            "before": "❑"
        },
        "user": {
            "before": "☺"
        },
		"uptime": {
			"before": "⇑ "
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "⌚ "
		}
	},
	"segments": {
        "left": [
            {
                "name": "hostname",
                "args": {
                    "only_if_ssh": false,
                    "exclude_domain": true
                },
                "width": 32,
                "align": "l"
            },
            {
                "name": "user",
                "width": 32,
                "align": "l"
            }
        ],
		"right": [
            {
                "name": "date",
                "align": "r"
            },
			{
				"name": "date",
				"args": {
					"format": "%H:%M:%S",
					"istime": true
				},
                "align": "r"
			}
		]
	}
}
