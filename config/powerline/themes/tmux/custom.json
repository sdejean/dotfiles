{
	"default_module": "powerline.segments.common",
	"segment_data": {
        "hostname": {
            "before": "❑ "
        },
        "user": {
            "before": "☺ "
        },
		"uptime": {
			"before": "⇑ "
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "⌚ "
		},
        "system_load": {
            "before": "☭ "
        }
	},
	"segments": {
        "left": [
            {
                "name": "hostname",
                "args": {
                    "only_if_ssh": false,
                    "exclude_domain": true
                },
                "width": 24,
                "align": "l"
            },
            {
                "name": "user",
                "width": 10,
                "align": "l"
            }
        ],
		"right": [
            {
                "name": "system_load",
                "args": {
                    "threshold_bad":  3,
                    "threshold_good": 1,
                    "track_cpu_count": true
                },
                "align": "r"
            },
			{
				"name": "date",
				"args": {
					"format": "%Y-%m-%d %H:%M:%S",
					"istime": true
				},
                "align": "r"
			}
		]
	}
}
